<#
.SYNOPSIS
  Remediates STIG WN10-CC-000185 by disabling AutoRun.

.DESCRIPTION
  Ensures the registry value NoAutorun is set to 1 under:
  HKEY_LOCAL_MACHINE\SOFTWARE\Microsoft\Windows\CurrentVersion\Policies\Explorer
#>
.NOTES
    Author          : Harrison Knapp
    GitHub          : https://github.com/hknapp518/hknapp518
    Date Created    : 2025-08-24
    Last Modified   : 2025-08-24
    Version         : 1.0
    STIG-ID         : WN10-CC-000185
# Define registry path and value
$RegPath  = "HKLM:\SOFTWARE\Microsoft\Windows\CurrentVersion\Policies\Explorer"
$ValueName = "NoAutorun"
$DesiredValue = 1

# Check if the key exists, if not, create it
if (-not (Test-Path $RegPath)) {
    Write-Output "Registry path not found. Creating: $RegPath"
    New-Item -Path $RegPath -Force | Out-Null
}

# Check current value
$currentValue = (Get-ItemProperty -Path $RegPath -Name $ValueName -ErrorAction SilentlyContinue).$ValueName

if ($currentValue -ne $DesiredValue) {
    Write-Output "Setting $ValueName to $DesiredValue"
    New-ItemProperty -Path $RegPath -Name $ValueName -Value $DesiredValue -PropertyType DWord -Force | Out-Null
} else {
    Write-Output "$ValueName is already set to $DesiredValue. No action needed."
}

Write-Output "STIG WN10-CC-000185 remediation complete."
